<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".FiveFragment">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="63dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/numero3" />

    <TextView
        android:id="@+id/datosPac"
        android:layout_width="335dp"
        android:layout_height="83dp"
        android:layout_marginTop="85dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Factores asociados al paciente"
        android:textAlignment="center"
        android:textColor="@color/titulos"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/Scrol"
        android:layout_width="350dp"
        android:layout_height="415dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="Edad"
                android:textColor="@color/titulos"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/r11"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/r11"
                    android:layout_width="69dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Menor a 20"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r12"
                    android:layout_width="69dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="21-40"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r13"
                    android:layout_width="69dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="41-50"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r14"
                    android:layout_width="69dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="51-60"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r15"
                    android:layout_width="69dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="> 60"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="Enfermedad pulmonar"
                android:textColor="@color/titulos"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/r21"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/r21"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Ninguna"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r22"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Mínima"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r23"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text=">Mínima"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="Apnea obstructiva del sueño"
                android:textColor="@color/titulos"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/r31"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/datosPac">


                <RadioButton
                    android:id="@+id/r31"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="No presenta"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r32"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Moderado"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r33"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="En CPAP"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="Enfermedad cardiovascular"
                android:textColor="@color/titulos"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/r4"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:checkedButton="@id/r41"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/datosPac">

                <RadioButton
                    android:id="@+id/r41"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="No"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r42"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Mínima (sin medicamentos)"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r43"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Media (1 medicamento)"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r44"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Moderada (2 medicamentos)"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r45"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Severa (≥ 3 medicamentos)"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="Diabetes"
                android:textColor="@color/titulos"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/r5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/r51"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/datosPac">

                <RadioButton
                    android:id="@+id/r51"
                    android:layout_width="86dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Ninguna"
                    android:textColor="@color/titulos"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/r5"
                    app:layout_constraintTop_toTopOf="@+id/r5" />

                <RadioButton
                    android:id="@+id/r52"
                    android:layout_width="86dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Medio"
                    android:textColor="@color/titulos"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/r51"
                    app:layout_constraintTop_toTopOf="@+id/r5" />

                <RadioButton
                    android:id="@+id/r53"
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Moderado"
                    android:textColor="@color/titulos"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/r52"
                    app:layout_constraintTop_toTopOf="@+id/r5" />


                <RadioButton
                    android:id="@+id/r54"
                    android:layout_width="86dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Insulina"
                    android:textColor="@color/titulos"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/r53"
                    app:layout_constraintTop_toTopOf="@+id/r5" />

            </RadioGroup>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="Inmunocompromiso"
                android:textColor="@color/titulos"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/r6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/r61"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/datosPac">

                <RadioButton
                    android:id="@+id/r61"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="No"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r62"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Moderado"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r63"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Severo"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textSwitch"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="Síntomas de enfermedad similar a la Influenza"
                android:textColor="@color/titulos"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:checked="false"
                android:fontFamily="sans-serif-condensed-light"
                android:showText="true"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/titulos"
                android:textOff="No"
                android:textOn="Si"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/r6"
                tools:checked="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:text="Exposición con una persona positiva para COVID-19 (últimos 14 días)"
                android:textColor="@color/titulos"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/r8"
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:checkedButton="@id/r81"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/datosPac">

                <RadioButton
                    android:id="@+id/r81"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="No"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r82"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Probablemente no"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r83"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Posible"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r84"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Probable"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/r85"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Si"
                    android:textColor="@color/titulos"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/BotonSiguientef5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/titulos"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Siguiente"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/BotonAtrasf5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/titulos"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Atrás"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>