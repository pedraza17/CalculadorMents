<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".VentanaRecomendacion">

    <Button
        android:id="@+id/botonInicioRecomendacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/titulos"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Inicio"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p7Procedimiento" />

    <Button
        android:id="@+id/botonAtrasRecomendacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/titulos"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="AtrÃ¡s"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p7Procedimiento"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/recomendacion"
        android:layout_width="218dp"
        android:layout_height="112dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-condensed-light"
        android:textAlignment="center"
        android:textColor="@color/titulos"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/botonAtrasRecomendacion"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titulorecomendacion"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAlignment="center"
        android:textColor="@color/titulos"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagenlogo"
        android:layout_width="307dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toTopOf="@+id/recomendacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulorecomendacion"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imagenrecomendacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/botonInicioRecomendacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/feliz" />

</androidx.constraintlayout.widget.ConstraintLayout>